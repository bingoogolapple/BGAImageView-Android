<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <cn.bingoogolapple.imageview.BGAImageView
        android:id="@+id/iv_main_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxHeight="@dimen/max_size"
        android:maxWidth="@dimen/max_size"
        android:src="@mipmap/holder"
        app:bga_iv_cornerRadius="10dp" />

    <cn.bingoogolapple.imageview.BGAImageView
        android:id="@+id/iv_main_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:maxHeight="@dimen/max_size"
        android:maxWidth="@dimen/max_size"
        android:src="@mipmap/holder"
        app:bga_iv_cornerRadius="10dp" />

    <cn.bingoogolapple.imageview.BGAImageView
        android:id="@+id/iv_main_test3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/holder"
        app:bga_iv_borderColor="#ff0000"
        app:bga_iv_borderWidth="3dp"
        app:bga_iv_isCircle="true" />

    <cn.bingoogolapple.imageview.BGAImageView
        android:id="@+id/iv_main_test4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/holder"
        app:bga_iv_isCircle="true" />

    <cn.bingoogolapple.imageview.BGAImageView
        android:id="@+id/iv_main_test5"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/test_square"
        app:bga_iv_isSquare="true" />


</LinearLayout>